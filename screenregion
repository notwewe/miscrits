from PIL import Image, ImageDraw

def draw_red_box_on_region(image_path, region):
    """Draw a red box around the defined region on the given image."""
    try:
        # Open the image
        image = Image.open(image_path)
        
        # Define the region (x1, y1, width, height)
        x1, y1, width, height = region
        x2, y2 = x1 + width, y1 + height
        
        # Initialize ImageDraw
        draw = ImageDraw.Draw(image)
        
        # Draw a red rectangle around the region
        draw.rectangle([x1, y1, x2, y2], outline="red", width=3)
        
        # Save the modified image with the red box
        image.save("image_with_red_box.png")
        image.show()  # Optionally display the image
    except Exception as e:
        print(f"Error: {e}")

# Define the SEARCH_REGION (x1, y1, width, height)
SEARCH_REGION = (493, 278, 724 - 493, 335 - 278)

# Specify the image path you want to draw the box on
image_path = "sss.png"  # Replace with your actual image path

# Call the function to draw the red box
draw_red_box_on_region(image_path, SEARCH_REGION)
